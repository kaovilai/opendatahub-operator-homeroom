{
    "kind": "BuildConfig",
    "apiVersion": "v1",
    "metadata": {
        "name": "jupyterhub",
        "namespace": "{{ meta.namespace }}",
        "labels": {
            "build": "jupyterhub",
            "app": "jupyterhub"
        }
    },
    "spec": {
        "triggers": [
            {
                "type": "ConfigChange"
            },
            {
                "type": "ImageChange"
            }
        ],
        "source": {
            "type": "Git",
            "git": {
                "uri": "https://github.com/jupyter-on-openshift/jupyterhub-quickstart.git"
            }
        },
        "strategy": {
            "type": "Source",
            "sourceStrategy": {
                "from": {
                    "kind": "DockerImage",
                    "name": "quay.io/vpavlin/python-36-ubi7:ubi"
                }
            }
        },
        "output": {
            "to": {
                "kind": "ImageStreamTag",
                "name": "jupyterhub:latest"
            }
        },
        "resources": {
            "limits": {
                "cpu": "1",
                "memory": "1Gi"
            }
        }
    }
}
