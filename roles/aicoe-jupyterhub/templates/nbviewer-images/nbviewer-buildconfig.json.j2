{
    "kind": "BuildConfig",
    "apiVersion": "v1",
    "metadata": {
        "name": "nbviewer",
        "namespace": "{{ meta.namespace }}",
        "labels": {
            "build": "nbviewer",
            "app": "jupyterhub"
        }
    },
    "spec": {
        "triggers": [
            {
                "type": "ConfigChange"
            }
        ],
        "source": {
            "type": "Git",
            "git": {
                "uri": "https://github.com/vpavlin/nbviewer-quickstart.git"
            }
        },
        "strategy": {
            "type": "Source",
            "sourceStrategy": {
                "from": {
                    "kind": "ImageStreamTag",
                    "name": "python:3.6",
                    "namespace": "openshift"
                }
            }
        },
        "output": {
            "to": {
                "kind": "ImageStreamTag",
                "name": "nbviewer:latest"
            }
        },
        "resources": {
            "limits": {
                "cpu": "1",
                "memory": "1Gi"
            }
        }
    }
}
